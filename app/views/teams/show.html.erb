<div class="breadcrumb">
  <%= link_to @team.league.name, league_path(@team.league), class: "text-blue-600" %>
</div>
<h2 class="text-3xl font-bold"><%= @team.user.name %></h2>
<section class="stats mt-4 mb-4">
  <ul>
    <li class="text-lg">
      Team Wins
      <span class="ml-2">
        <%= @team.rosters.winner.count %>
      </span>
    </li>
  </ul>
</section>
<%= link_to 'Back', league_path(@team.league), class: "text-blue-600" %>
